<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Spring Library</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SpringLibrary", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Session["funcionarioLogado"] != null)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cadastrar<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Livro", "LivroView", "Livro")</li>
                                <li>@Html.ActionLink("Souvenir", "SouvenirView", "Souvenir")</li>
                                <li>@Html.ActionLink("Cliente Físico", "ClienteFisico", "Cliente")</li>
                                <li>@Html.ActionLink("Cliente Jurídico", "ClienteJuridico", "Cliente")</li>
                                <li>@Html.ActionLink("Funcionário", "FuncionarioView", "Funcionario")</li>
                                <li>@Html.ActionLink("Nota Fiscal", "NotaFiscalView", "NotaFiscal")</li>
                                <li>@Html.ActionLink("Pedido", "ItemVendaView", "ItemVenda")</li>
                                <li>@Html.ActionLink("Endereço", "EnderecoView", "Endereco")</li>
                                <li>@Html.ActionLink("Delivery", "DeliveryView", "Delivery")</li>
                                <li>@Html.ActionLink("Restauração", "RestauracaoView", "Restauracao")</li>
                                <li>@Html.ActionLink("Evento", "EventoView", "Evento")</li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="= nav navbar-nav navbar-right">
                        <li>@Html.ActionLink(@Session["funcionarioLogado"].ToString(), "Login", "Login/Logout")</li>
                        <li>@Html.ActionLink("Logout", "Login", "Login/Logout")</li>
                    </ul>
                </div>
            }
            else
            {
                <ul class="= nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Login", "Login", "Login")</li>
                </ul>
            }
        </div>
    </div>
    <div class="container body-content">
        @if (Session["funcionarioLogado"] != null || HttpContext.Current.Request.AppRelativeCurrentExecutionFilePath.Contains("Login"))
        {
            @RenderBody()
        }
        else
        {
            Context.Response.Redirect("/Login/Login");
        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
